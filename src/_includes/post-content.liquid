<article class="post full">

  <div class="post-main">


    {% if featured %}
    {% include featured %}
    {% endif %}

    <div class="post-body">
    <div class="post-meta">
      {{ date | date: "%d %b" }}<br/>
      {{ date | date: "%Y" }}
      <div class="post-meta-deco">
      </div>
    </div>

    {% assign query = collections.all | where: "fileSlug", project | first %}

    <div class="post-content">
      <h2>{{ title }}</h2>
      {% if query %}
      <div class="post-project">part of <a href="{{ query.url }}">{{ query.data.title }}</a></div>
      {% endif %}
      {{ content | safe }}

    </div>
  </div>

  </div>

</article>
