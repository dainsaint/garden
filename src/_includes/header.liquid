<header class="header-main {{ color | contrast }} {% if promo %}promo{% endif %}">

  <div class="header-content">
  {% assign home = '/' %}
  <div class="header-lede">
    <a class="title" href="{{ home | url }}">dain saint</a>
    <span class="tagline">art and activism for an abundant society</span>
  </div>
  <nav class="header-nav">
    {% for item in collections.pages %}
    <a class="{% if item.url == page.url %}active{% endif %}" href="{{ item.url | url }}">{{ item.data.title }}</a>
    {% endfor %}
    <a href="https://store.dainsaint.com">store</a>
  </nav>

  {% if promo %}
  <hr/>

  <div class="promo">
    {{ promo | markdown }}
  </div>

  {% endif %}
</div>
</header>
